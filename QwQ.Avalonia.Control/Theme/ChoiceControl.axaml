<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:control="clr-namespace:QwQ.Avalonia.Control">
    <!-- Add Resources Here -->
    <ControlTheme x:Key="{x:Type control:ChoiceControl}" TargetType="control:ChoiceControl">
        <Setter Property="Template">
            <ControlTemplate>
                <!-- 定义控件模板 -->
                <TransitioningContentControl Name="PART_TransitioningContent"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
