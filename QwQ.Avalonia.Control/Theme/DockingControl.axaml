<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:docking="using:QwQ.Avalonia.Control.Docking">
    
    <!-- DockingManager 样式 -->
    <ControlTheme x:Key="{x:Type docking:DockingManager}" TargetType="docking:DockingManager">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <ItemsPresenter Name="PART_ItemsPresenter"
                                  ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Grid>
            </ControlTemplate>
        </Setter>
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <Grid />
            </ItemsPanelTemplate>
        </Setter>
    </ControlTheme>
    
    <!-- DockPane 样式 -->
    <ControlTheme x:Key="{x:Type docking:DockPane}" TargetType="docking:DockPane">
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="4">
                    <Grid>
                        <ItemsPresenter Name="PART_ItemsPresenter"
                                      ItemsPanel="{TemplateBinding ItemsPanel}" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="{Binding Orientation, RelativeSource={RelativeSource TemplatedParent}}" />
            </ItemsPanelTemplate>
        </Setter>
    </ControlTheme>
    
    <!-- DockDocument 样式 -->
    <ControlTheme x:Key="{x:Type docking:DockDocument}" TargetType="docking:DockDocument">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="4">
                    <Grid RowDefinitions="Auto,*">
                        <Border Grid.Row="0" 
                                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                                Padding="8,4">
                            <TextBlock Text="{TemplateBinding Title}" 
                                       FontWeight="Bold" />
                        </Border>
                        <ContentPresenter Grid.Row="1" 
                                          Content="{TemplateBinding Content}" 
                                          ContentTemplate="{TemplateBinding ContentTemplate}" 
                                          Padding="8" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
    
</ResourceDictionary>