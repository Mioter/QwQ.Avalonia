<UserControl
    x:Class="Sample.Views.Pages.RunningTextPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sample.ViewModels"
    xmlns:controls="using:QwQ.Avalonia.Control"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:RunningTextPageViewModel">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            
            <!-- 标题 -->
            <TextBlock Text="RunningText 控件示例" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" />
            
            <!-- 基本用法示例 -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    BorderBrush="{DynamicResource CardBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="基本用法" FontSize="18" FontWeight="SemiBold" />
                    
                    <controls:RunningText Text="{Binding SampleText}" 
                                          Speed="{Binding Speed}"
                                          Direction="{Binding Direction}"
                                          Background="{DynamicResource SystemAccentColorLight1}"
                                          Foreground="{DynamicResource SystemAccentColorDark1}"
                                          Padding="10,5"
                                          Height="40" />
                    
                    <TextBlock Text="这是一个基本的RunningText控件示例，文本会按照设定的方向和速度进行滚动。" 
                               TextWrapping="Wrap" 
                               Classes="Secondary" />
                </StackPanel>
            </Border>

            <!-- 不同方向的示例 -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    BorderBrush="{DynamicResource CardBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="不同滚动方向" FontSize="18" FontWeight="SemiBold" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="10">
                        <!-- 从右到左 -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="5">
                            <TextBlock Text="从右到左 (RightToLeft)" FontWeight="SemiBold" />
                            <controls:RunningText Text="从右到左滚动的文本" 
                                                  Direction="RightToLeft"
                                                  Speed="100"
                                                  Height="30"
                                                  Background="{DynamicResource SystemAccentColorLight2}"
                                                  Padding="8,4" />
                        </StackPanel>
                        
                        <!-- 从左到右 -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="5">
                            <TextBlock Text="从左到右 (LeftToRight)" FontWeight="SemiBold" />
                            <controls:RunningText Text="从左到右滚动的文本" 
                                                  Direction="LeftToRight"
                                                  Speed="100"
                                                  Height="30"
                                                  Background="{DynamicResource SystemAccentColorLight2}"
                                                  Padding="8,4" />
                        </StackPanel>
                        
                        <!-- 从下到上 -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="5">
                            <TextBlock Text="从下到上 (BottomToTop)" FontWeight="SemiBold" />
                            <controls:RunningText Text="从下到上滚动的文本" 
                                                  Direction="BottomToTop"
                                                  Speed="80"
                                                  Height="60"
                                                  Background="{DynamicResource SystemAccentColorLight2}"
                                                  Padding="8,4" />
                        </StackPanel>
                        
                        <!-- 从上到下 -->
                        <StackPanel Grid.Column="1" Grid.Row="1" Spacing="5">
                            <TextBlock Text="从上到下 (TopToBottom)" FontWeight="SemiBold" />
                            <controls:RunningText Text="从上到下滚动的文本" 
                                                  Direction="TopToBottom"
                                                  Speed="80"
                                                  Height="60"
                                                  Background="{DynamicResource SystemAccentColorLight2}"
                                                  Padding="8,4" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 控制面板 -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    BorderBrush="{DynamicResource CardBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="控制面板" FontSize="18" FontWeight="SemiBold" />
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
                        
                        <!-- 文本选择 -->
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="文本内容:" VerticalAlignment="Center" />
                        <ComboBox Grid.Column="1" Grid.Row="0" 
                                  ItemsSource="{Binding SampleTexts}"
                                  SelectedItem="{Binding SampleText}"
                                  HorizontalAlignment="Stretch" />
                        
                        <!-- 滚动方向 -->
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="滚动方向:" VerticalAlignment="Center" />
                        <ComboBox Grid.Column="1" Grid.Row="1" 
                                  ItemsSource="{Binding Directions}"
                                  SelectedItem="{Binding Direction}"
                                  HorizontalAlignment="Stretch" />
                        
                        <!-- 滚动速度 -->
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="滚动速度:" VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Spacing="10">
                            <Slider Value="{Binding Speed}" 
                                    Minimum="20" 
                                    Maximum="300" 
                                    Width="200" />
                            <TextBlock Text="{Binding Speed, StringFormat='{}{0:F0}'}" 
                                       VerticalAlignment="Center" 
                                       MinWidth="40" />
                        </StackPanel>
                        
                        <!-- 间距设置 -->
                        <TextBlock Grid.Column="0" Grid.Row="3" Text="文本间距:" VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" Spacing="10">
                            <Slider Value="{Binding Space}" 
                                    Minimum="0" 
                                    Maximum="200" 
                                    Width="200" />
                            <TextBlock Text="{Binding Space, StringFormat='{}{0:F0}'}" 
                                       VerticalAlignment="Center" 
                                       MinWidth="40" />
                            <Button Content="自动" 
                                    Command="{Binding SetAutoSpaceCommand}"
                                    HorizontalAlignment="Right" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 高级示例 -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    BorderBrush="{DynamicResource CardBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="高级示例" FontSize="18" FontWeight="SemiBold" />
                    
                    <!-- 带样式的滚动文本 -->
                    <StackPanel Spacing="10">
                        <TextBlock Text="带样式的滚动文本" FontWeight="SemiBold" />
                        <controls:RunningText Text="🎉 这是一个带有表情符号和特殊样式的滚动文本示例！🎊"
                                              Direction="RightToLeft"
                                              Speed="150"
                                              Space="50"
                                              Height="50"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Foreground="Blue"
                                              Padding="15,10" />
                    </StackPanel>
                    
                    <!-- 多行文本滚动 -->
                    <StackPanel Spacing="10">
                        <TextBlock Text="多行文本滚动" FontWeight="SemiBold" />
                        <controls:RunningText Text="这是第一行文本&#x0a;这是第二行文本&#x0a;这是第三行文本"
                                              Direction="BottomToTop"
                                              Speed="60"
                                              Height="80"
                                              Background="{DynamicResource SystemAccentColorLight3}"
                                              Padding="10,8" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 说明文档 -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    BorderBrush="{DynamicResource CardBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel Spacing="10">
                    <TextBlock Text="使用说明" FontSize="18" FontWeight="SemiBold" />
                    
                    <TextBlock Text="RunningText 控件属性说明：" FontWeight="SemiBold" />
                    <StackPanel Margin="10,0,0,0" Spacing="5">
                        <TextBlock Text="• Text: 要滚动的文本内容" />
                        <TextBlock Text="• Direction: 滚动方向 (RightToLeft, LeftToRight, BottomToTop, TopToBottom)" />
                        <TextBlock Text="• Speed: 滚动速度，单位为像素/秒" />
                        <TextBlock Text="• Space: 文本间距，设置为 NaN 时自动计算" />
                        <TextBlock Text="• 支持所有标准的 Control 属性，如 Background, Foreground, FontSize 等" />
                    </StackPanel>
                    
                    <TextBlock Text="注意事项：" FontWeight="SemiBold" Margin="0,10,0,0" />
                    <StackPanel Margin="10,0,0,0" Spacing="5">
                        <TextBlock Text="• 控件会自动处理文本的连续滚动效果" />
                        <TextBlock Text="• 当控件不可见时会自动停止动画以节省性能" />
                        <TextBlock Text="• 支持动态更改属性，动画会自动重新开始" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl> 