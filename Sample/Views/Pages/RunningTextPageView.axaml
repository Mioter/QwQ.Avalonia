<UserControl
    x:Class="Sample.Views.Pages.RunningTextPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sample.ViewModels"
    xmlns:controls="using:QwQ.Avalonia.Control"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:RunningTextPageViewModel">
    
    <UserControl.Styles>
        <!-- RunningText 占位符样式 -->
        <Style Selector="controls|RunningText:placeholder">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="18">
            <TextBlock Text="RunningText 控件功能演示" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- 1. 基础用法 -->
            <Expander Header="基础用法">
                <StackPanel Spacing="8">
                    <controls:RunningText Text="这是一个基础横向滚动示例" Height="32" Speed="100" Padding="8,4"/>
                    <controls:RunningText Text="这是一个基础纵向滚动示例" Direction="BottomToTop" Height="48" Speed="80" Padding="8,4"/>
                </StackPanel>
            </Expander>

            <!-- 2. 占位符功能 -->
            <Expander Header="占位符功能">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <controls:RunningText Text="有内容" PlaceholderText="请输入..." Width="180" Height="32"/>
                    <controls:RunningText Text="" PlaceholderText="请输入..." Width="180" Height="32"/>
                </StackPanel>
            </Expander>

            <!-- 3. 滚动模式 -->
            <Expander Header="滚动模式 (Mode)">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <StackPanel Spacing="2">
                        <TextBlock Text="Cycle(循环)" FontSize="12"/>
                        <controls:RunningText Text="循环滚动文本" Mode="Cycle" Height="32" Speed="100" Width="180"/>
                    </StackPanel>
                    <StackPanel Spacing="2">
                        <TextBlock Text="Bounce(往返)" FontSize="12"/>
                        <controls:RunningText Text="往返滚动文本" Mode="Bounce" Height="32" Speed="100" Width="180"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- 4. 滚动行为 -->
            <Expander Header="滚动行为 (Behavior)">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <StackPanel Spacing="2">
                        <TextBlock Text="Auto(自动)" FontSize="12"/>
                        <controls:RunningText Text="短文本" Behavior="Auto" Height="32" Width="120"/>
                    </StackPanel>
                    <StackPanel Spacing="2">
                        <TextBlock Text="Always(强制)" FontSize="12"/>
                        <controls:RunningText Text="短文本" Behavior="Always" Height="32" Width="120"/>
                    </StackPanel>
                    <StackPanel Spacing="2">
                        <TextBlock Text="Pause(暂停)" FontSize="12"/>
                        <controls:RunningText Text="长文本内容，但暂停滚动" Behavior="Pause" Height="32" Width="180"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- 5. 文本对齐 -->
            <Expander Header="文本对齐 (TextAlignment)">
                <StackPanel Spacing="8">
                    <TextBlock Text="水平方向对齐" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <controls:RunningText Text="左对齐" TextAlignment="Left" Behavior="Auto" Height="32" Width="100"/>
                        <controls:RunningText Text="居中对齐" TextAlignment="Center" Behavior="Auto" Height="32" Width="100"/>
                        <controls:RunningText Text="右对齐" TextAlignment="Right" Behavior="Auto" Height="32" Width="100"/>
                    </StackPanel>
                    <TextBlock Text="垂直方向对齐" FontSize="12" Margin="0,8,0,0"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <controls:RunningText Text="垂直左" Direction="TopToBottom" TextAlignment="Left" Behavior="Auto" Height="80" Width="32"/>
                        <controls:RunningText Text="垂直中" Direction="TopToBottom" TextAlignment="Center" Behavior="Auto" Height="80" Width="32"/>
                        <controls:RunningText Text="垂直右" Direction="TopToBottom" TextAlignment="Right" Behavior="Auto" Height="80" Width="32"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- 6. 高级样式 -->
            <Expander Header="高级样式/自定义">
                <StackPanel Spacing="8">
                    <controls:RunningText Text="🎉 带表情和自定义样式的滚动文本！🎊" Direction="RightToLeft" Speed="150" Space="50" Height="40" FontSize="16" FontWeight="Bold" Foreground="Blue" Padding="15,10"/>
                    <controls:RunningText Text="多行文本滚动\n第二行\n第三行" Direction="BottomToTop" Speed="60" Height="60" Background="LightGray" Padding="10,8"/>
                </StackPanel>
            </Expander>

            <!-- 7. 属性说明 -->
            <Expander Header="属性说明/注意事项" IsExpanded="False">
                <StackPanel Spacing="2">
                    <TextBlock Text="• Text: 要滚动的文本内容"/>
                    <TextBlock Text="• PlaceholderText: 占位符文本，Text为空时显示"/>
                    <TextBlock Text="• Direction: 滚动方向 (RightToLeft, LeftToRight, BottomToTop, TopToBottom)"/>
                    <TextBlock Text="• Mode: 滚动模式 (Cycle, Bounce)"/>
                    <TextBlock Text="• Behavior: 滚动行为 (Auto, Always, Pause)"/>
                    <TextBlock Text="• TextAlignment: 文本对齐方式 (Left, Center, Right)"/>
                    <TextBlock Text="• Speed: 滚动速度 (像素/秒)"/>
                    <TextBlock Text="• Space: 文本间距，NaN为自动"/>
                    <TextBlock Text="• 支持所有标准Control属性，如Background, Foreground, FontSize等"/>
                    <TextBlock Text="• 占位符样式可通过 ':placeholder' 伪类自定义"/>
                    <TextBlock Text="• 文本对齐仅在无需滚动时生效"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl> 